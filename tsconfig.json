{
  "compilerOptions": {
    // File Layout
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "types": ["node"],
    "noEmit": true,

    // Environment Settings
    "module": "nodenext",
    "target": "es2020",
    "lib": ["es2020"],

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Module Resolution
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
